{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "rules": {
    // Functional Programming Standards (from CLAUDE.md)
    "prefer-const": "error",
    "no-var": "error",
    
    // No global variables
    "no-implicit-globals": "error",
    "no-global-assign": "error",
    
    // Pure functions and immutability
    "no-param-reassign": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    
    // Error handling - relaxed for development
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_", 
      "args": "none",
      "ignoreRestSiblings": true
    }],
    "no-throw-literal": "error",
    
    // Code quality
    "import/order": ["error", {
      "groups": [
        "builtin",
        "external", 
        "internal",
        "parent",
        "sibling",
        "index"
      ],
      "newlines-between": "always"
    }],
    
    // Electron specific
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts", 
        "**/*.test.tsx", 
        "**/*.spec.ts",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "**/src/__tests__/**/*.ts"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "no-console": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-undef": "off"
      }
    },
    {
      "files": [
        "**/example*.ts",
        "**/Example*.ts",
        "**/demo*.ts",
        "**/Demo*.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}